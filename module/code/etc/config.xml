<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Hackathon_BigBrother>
            <version>0.0.2</version>
        </Hackathon_BigBrother>
    </modules>
    <global>
        <blocks>
            <bigbrother>
                <class>Hackathon_BigBrother_Block</class>
            </bigbrother>
        </blocks>
        <models>
            <bigbrother>
                <class>Hackathon_BigBrother_Model</class>
                <resourceModel>bigbrother_resource</resourceModel>
            </bigbrother>
            <bigbrother_resource>
                <class>Hackathon_BigBrother_Model_Resource</class>
                <entities>
                    <session>
                        <table>bigbrother_session</table>
                    </session>
                </entities>
            </bigbrother_resource>
        </models>
        <resources>
            <bigbrother_setup>
                <setup>
                    <module>Hackathon_BigBrother</module>
                </setup>
            </bigbrother_setup>
        </resources>
        <helpers>
            <bigbrother>
                <class>Hackathon_BigBrother_Helper</class>
            </bigbrother>
        </helpers>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bigbrother>
                    <file>bigbrother.xml</file>
                </bigbrother>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <bigbrother>
                    <file>bigbrother.xml</file>
                </bigbrother>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <bigbrother before="Mage_Adminhtml">Hackathon_BigBrother</bigbrother>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <bigbrother>
            <settings>
                <node_url>http://bigbrother.dev:3000/</node_url>
            </settings>
        </bigbrother>
    </default>
</config>